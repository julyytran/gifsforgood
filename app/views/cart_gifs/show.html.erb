<h1>Your Shopping Cart</h1>

<% @gifs.each do |gif, quantity| %>
<div id="gif-info">
  <%= image_path gif.image %>
  <p>Title, Price, Quanity:<%= gif.title %> <%= format_price(gif.price) %>: <%= quantity %>
    <%= link_to "Remove", cart_path(id: gif.id), method: :delete %></p>
  <p><%= gif.description %></p>
</div>

<% end %>

<p>Total: <%=  format_price(get_total_price(@gifs)) %></p>
