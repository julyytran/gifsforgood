<%= form_for @gif, url: admin_gifs_path do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %>
  <p><%= f.label :description %>
  <%= f.text_field :description %>
  <p><%= f.label :price %>
  <%= f.text_field :price %>
  <p><%= label_tag :tags %>
  <%= text_field_tag :tags %>
  <p><%= f.label :image %>
  <%= f.file_field :image %>

  <p><%= select @gif.id, :charity, @charities.map{|charity|charity.name} %></p>


  <p><%= f.submit "add new gif!" %>
<% end %>
